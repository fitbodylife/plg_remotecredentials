<?xml version="1.0" encoding="utf-8"?>
<extension 
    version="1.7" 
    type="plugin" 
    group="authentication"
    method="upgrade"
    >
    <name>PLG_REMOTECREDENTIALS</name>
    <author>Emerson Rocha Luiz</author>
    <creationDate>2011-11-19</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
    <license>GNU General Public License version 3. See license.txt</license>
    <authorEmail>emerson@webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <version>0.1alpha</version>
    <description>PLG_REMOTECREDENTIALS_DESCRIPTION</description>
    <files>
        <filename plugin="remotecredentials">remotecredentials.php</filename>
        <filename>index.html</filename>
        <filename>readme.txt</filename>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_authentication_remotecredentials.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_authentication_remotecredentials.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
                
                <field 
                    name="url" 
                    type="text" 
                    default="localhost" 
                    label="PLG_REMOTECREDENTIALS_URL_LABEL" 
                    description="PLG_REMOTECREDENTIALS_URL_DESC">
                </field>
                <field 
                    name="token" 
                    type="text" 
                    default="EDITME"
                    label="PLG_REMOTECREDENTIALS_TOKEN_LABEL" 
                    description="PLG_REMOTECREDENTIALS_TOKEN_LABEL">
                </field>
                <field 
                    name="tokenvar" 
                    type="text" 
                    default="rctoken"
                    label="PLG_REMOTECREDENTIALS_TOKENVAR_LABEL" 
                    description="PLG_REMOTECREDENTIALS_TOKENVAR_DESC">
                </field>
            </fieldset>

        </fields>
    </config>
</extension>