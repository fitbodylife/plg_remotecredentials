<?xml version="1.0" encoding="utf-8"?>
<install 
    version="1.6" 
    type="plugin" 
    group="system"
    method="upgrade"
    >
    <name>System - Remote Credeltials (Server)</name>
    <author>Emerson Rocha Luiz</author>
    <creationDate>2011-11-19</creationDate>
    <copyright>opyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
    <license>GNU General Public License version 3. See license.txt</license>
    <authorEmail>emerson@webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <version>0.1alpha</version>
    <description>PLG_REMOTECREDENTIALSSERVER_DESCRIPTION</description>
    <files>
        <filename plugin="remotecredentialsserver">remotecredentialsserver.php</filename>
        <filename>license.txt</filename>
        <filename>readme.txt</filename>
        <filename>remotecredentialsserver.xml</filename>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_remotecredentialsserver.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_remotecredentialsserver.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="ips" 
                    type="text" 
                    default="localhost" 
                    label="PLG_REMOTECREDENTIALSSERVER_IPS_LABEL" 
                    description="PLG_REMOTECREDENTIALSSERVER_IPS_DESC">
                </field>
                <field 
                    name="token" 
                    type="text" 
                    default="EDITME"
                    label="PLG_REMOTECREDENTIALSSERVER_TOKEN_LABEL" 
                    description="PLG_REMOTECREDENTIALSSERVER_TOKEN_DESC">
                </field>
                <field 
                    name="tokenvar" 
                    type="text" 
                    default="rctoken"
                    label="PLG_REMOTECREDENTIALSSERVER_TOKENVAR_LABEL" 
                    description="PLG_REMOTECREDENTIALSSERVER_TOKENVAR_DESC">
                </field>
            </fieldset>
        </fields>
    </config>
</install>
